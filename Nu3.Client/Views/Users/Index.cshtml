        <th>Firstname</th>
        <th>Energy risk category</th>
        <th>Details</th>
        <th>Reports</th>
    </tr>
    </thead>
    @foreach(var user in Model) {
    <tr>
        <td>
            <span class="data-txt">@user.SocialSecurityNumber</span>
        </td>
        <td>
            @user.Lastname
        </td>
        <td>
            @user.Firstname
        </td>
        <td>
            <span class="badge badge-danger">Low energy consumption</span>
        </td>
        <td>
            <a href="@Url.Action("Edit","Users", new { id=@user.Id})"><i class="fas fa-edit"></i> Details</a>
        </td>
        <td>
            <a href="@Url.Action("Report","Users", new { id=@user.Id})"><i class="fas fa-chart-pie"></i> See reports</a>
